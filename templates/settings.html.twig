{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Settings</h3>
            <p class="card-subtitle">Manage your application preferences</p>
        </div>

        <div class="card-body">
            <form class="form-stack" method="post" action="{{ path('app_settings') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('settings_update') }}">
                <div class="form-group">
                    <h4 class="section-title">Profile Settings</h4>
                    <div class="form-row">
                        <div class="form-group">
                            <label class="label">Display Name</label>
                            <input type="text" name="display_name" class="input" value="{{ app.user.name|default('User') }}">
                        </div>
                        <div class="form-group">
                            <label class="label">Email</label>
                            <input type="email" class="input" value="{{ app.user.email }}" disabled>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <h4 class="section-title">Notifications</h4>
                    <div class="checkbox-group">
                        <label class="checkbox-label" style="display: flex; align-items: center; gap: 0.5rem;">
                            <input type="checkbox" name="notify_email" {% if app.user.notifyEmail %}checked{% endif %}> Email Notifications
                        </label>
                        <label class="checkbox-label" style="display: flex; align-items: center; gap: 0.5rem;">
                            <input type="checkbox" name="notify_desktop" {% if app.user.notifyDesktop %}checked{% endif %}> Desktop Notifications
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <h4 class="section-title">Appearance</h4>
                    <div class="form-group">
                        <label class="label">Theme</label>
                        <select class="select" name="theme">
                            <option value="light" {% if app.user.theme == 'light' %}selected{% endif %}>Light</option>
                            <option value="dark" {% if app.user.theme == 'dark' %}selected{% endif %}>Dark</option>
                            <option value="system" {% if app.user.theme == 'system' %}selected{% endif %}>System Default</option>
                        </select>
                    </div>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn btn-submit">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
