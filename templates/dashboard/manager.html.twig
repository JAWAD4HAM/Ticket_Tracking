{% extends 'base.html.twig' %}

{% block title %}{{ 'Manager Dashboard'|trans }}{% endblock %}

{% block body %}
<div class="manager-header">
    <h2 class="manager-title">{{ 'Manager Overview'|trans }}</h2>
</div>

<div class="manager-dashboard">
    <aside class="manager-rail">
        <div class="tile-card rail-card tile-amber">
            <span class="tile-icon"><i class="fa-solid fa-ticket"></i></span>
            <div class="tile-value">{{ stats.total }}</div>
            <div class="tile-label">{{ 'Total Tickets'|trans }}</div>
        </div>
        <div class="tile-card rail-card tile-orange">
            <span class="tile-icon"><i class="fa-solid fa-clock"></i></span>
            <div class="tile-value">{{ stats.late }}</div>
            <div class="tile-label">{{ 'Late Tickets'|trans }}</div>
        </div>
        <div class="tile-card rail-card tile-rose">
            <span class="tile-icon"><i class="fa-solid fa-triangle-exclamation"></i></span>
            <div class="tile-value">{{ stats.unassigned }}</div>
            <div class="tile-label">{{ 'Unassigned Tickets'|trans }}</div>
        </div>
    </aside>

    <section class="manager-canvas">
        <div class="manager-top">
            <div class="card chart-card">
                <div class="chart-header">
                    <div>
                        <h3 class="chart-title">{{ 'Ticket Evolution'|trans }}</h3>
                        <p class="chart-subtitle">{{ 'Evolution of tickets in the past year'|trans }}</p>
                    </div>
                    <div class="chart-legend">
                        <span class="legend-item"><span class="legend-dot dot-blue"></span>{{ 'Open Tickets'|trans }}</span>
                        <span class="legend-item"><span class="legend-dot dot-emerald"></span>{{ 'Resolved Tickets'|trans }}</span>
                        <span class="legend-item"><span class="legend-dot dot-amber"></span>{{ 'Late Tickets'|trans }}</span>
                    </div>
                </div>
                <div class="chart-body">
                    <svg class="chart-svg" viewBox="0 0 600 220" preserveAspectRatio="none" aria-hidden="true">
                        <defs>
                            <linearGradient id="lineFade" x1="0" x2="0" y1="0" y2="1">
                                <stop offset="0%" stop-color="#3B82F6" stop-opacity="0.35"/>
                                <stop offset="100%" stop-color="#3B82F6" stop-opacity="0"/>
                            </linearGradient>
                        </defs>
                        <path d="M0 200 L60 195 L120 198 L180 190 L240 192 L300 170 L360 120 L420 80 L480 60 L540 110 L600 190" fill="none" stroke="#3B82F6" stroke-width="3"/>
                        <path d="M0 200 L60 195 L120 198 L180 190 L240 192 L300 170 L360 120 L420 80 L480 60 L540 110 L600 190 L600 220 L0 220 Z" fill="url(#lineFade)"/>
                        <circle cx="480" cy="60" r="6" fill="#3B82F6"/>
                    </svg>
                </div>
            </div>

            <div class="card chart-card">
                <div class="chart-header">
                    <div>
                        <h3 class="chart-title">{{ 'Tickets status by month'|trans }}</h3>
                        <p class="chart-subtitle">{{ 'Status distribution trend'|trans }}</p>
                    </div>
                    <div class="chart-legend">
                        <span class="legend-item"><span class="legend-dot dot-indigo"></span>{{ 'In Progress'|trans }}</span>
                        <span class="legend-item"><span class="legend-dot dot-green"></span>{{ 'Resolved Tickets'|trans }}</span>
                        <span class="legend-item"><span class="legend-dot dot-slate"></span>{{ 'Closed Tickets'|trans }}</span>
                    </div>
                </div>
                <div class="chart-body">
                    <svg class="chart-svg" viewBox="0 0 600 220" preserveAspectRatio="none" aria-hidden="true">
                        <rect x="40" y="60" width="80" height="140" fill="#93C5FD"/>
                        <rect x="150" y="40" width="80" height="160" fill="#60A5FA"/>
                        <rect x="260" y="90" width="80" height="110" fill="#A7F3D0"/>
                        <rect x="370" y="70" width="80" height="130" fill="#34D399"/>
                        <rect x="480" y="100" width="80" height="100" fill="#94A3B8"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="manager-tiles">
            <div class="tile-card tile-green">
                <span class="tile-icon"><i class="fa-solid fa-inbox"></i></span>
                <div class="tile-value">{{ stats.incoming }}</div>
                <div class="tile-label">{{ 'Incoming Tickets'|trans }}</div>
                <div class="tile-meta">{{ 'Last 7 days'|trans }}</div>
            </div>
            <div class="tile-card tile-blue">
                <span class="tile-icon"><i class="fa-solid fa-user-check"></i></span>
                <div class="tile-value">{{ stats.assigned }}</div>
                <div class="tile-label">{{ 'Assigned Tickets'|trans }}</div>
            </div>
            <div class="tile-card tile-indigo">
                <span class="tile-icon"><i class="fa-solid fa-spinner"></i></span>
                <div class="tile-value">{{ stats.in_progress }}</div>
                <div class="tile-label">{{ 'In Progress'|trans }}</div>
            </div>
            <div class="tile-card tile-amber">
                <span class="tile-icon"><i class="fa-solid fa-folder-open"></i></span>
                <div class="tile-value">{{ stats.open }}</div>
                <div class="tile-label">{{ 'Open Tickets'|trans }}</div>
            </div>
            <div class="tile-card tile-emerald">
                <span class="tile-icon"><i class="fa-solid fa-circle-check"></i></span>
                <div class="tile-value">{{ stats.resolved }}</div>
                <div class="tile-label">{{ 'Resolved Tickets'|trans }}</div>
            </div>
            <div class="tile-card tile-slate">
                <span class="tile-icon"><i class="fa-solid fa-lock"></i></span>
                <div class="tile-value">{{ stats.closed }}</div>
                <div class="tile-label">{{ 'Closed Tickets'|trans }}</div>
            </div>
            <div class="tile-card tile-purple">
                <span class="tile-icon"><i class="fa-solid fa-stopwatch"></i></span>
                <div class="tile-value">{{ stats.avg_resolution_hours is not null ? stats.avg_resolution_hours : '-' }}</div>
                <div class="tile-label">{{ 'Avg Resolution (hrs)'|trans }}</div>
            </div>
        </div>
    </section>
</div>

<div class="manager-bottom">
    <div class="card panel-card">
        <div class="card-header">
            <h3 class="card-title">{{ 'Workload by Technician'|trans }}</h3>
        </div>
        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>{{ 'Technician'|trans }}</th>
                        <th>{{ 'Assigned Tickets'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in stats.tickets_per_tech %}
                        <tr>
                            <td>{{ row.name }}</td>
                            <td>{{ row.total }}</td>
                        </tr>
                    {% else %}
                        <tr><td colspan="2">{{ 'No assigned tickets yet.'|trans }}</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card panel-card">
        <div class="card-header">
            <h3 class="card-title">{{ 'Resolution Pace'|trans }}</h3>
        </div>
        <div class="ring-stat">
            <div class="ring">
                <span>{{ stats.avg_resolution_hours is not null ? stats.avg_resolution_hours : '-' }}</span>
            </div>
            <p>{{ 'Average resolution time in hours'|trans }}</p>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{ 'All Recent Tickets'|trans }}</h3>
    </div>
    <div class="table-container">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>{{ 'ID'|trans }}</th>
                    <th>{{ 'Subject'|trans }}</th>
                    <th>{{ 'Creator'|trans }}</th>
                    <th>{{ 'Assignee'|trans }}</th>
                    <th>{{ 'Status'|trans }}</th>
                    <th>{{ 'Date'|trans }}</th>
                    <th>{{ 'Action'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for ticket in recent_tickets %}
                    <tr>
                        <td>#{{ ticket.id }}</td>
                        <td>{{ ticket.title }}</td>
                        <td>{{ ticket.creator.name|default('Unknown'|trans) }}</td>
                        <td>{{ ticket.assignee.name|default('Unassigned'|trans) }}</td>
                        <td>
                            {% set statusLabel = ticket.status.label|default('Unknown'|trans) %}
                            <span class="status-badge {{ statusLabel in ['Ouvert', 'En cours', 'Open', 'In progress', 'In Progress'] ? 'status-open' : 'status-closed' }}">
                                {{ statusLabel }}
                            </span>
                        </td>
                        <td>{{ ticket.createdAt|date('Y-m-d H:i') }}</td>
                        <td>
                            <a href="{{ path('app_ticket_show', {id: ticket.id}) }}" style="color: #3B82F6;">{{ 'View'|trans }}</a>
                            {% set can_delete = is_granted('ROLE_ADMIN') or (ticket.creator and app.user and ticket.creator.id == app.user.id) %}
                            {% if can_delete %}
                                <form method="post" action="{{ path('app_ticket_delete', {id: ticket.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('ticket_delete_' ~ ticket.id) }}">
                                    <button type="submit" style="margin-left: 0.5rem; color: #DC2626; background: none; border: none; padding: 0; cursor: pointer;">{{ 'Delete'|trans }}</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="7">{{ 'No tickets found.'|trans }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
