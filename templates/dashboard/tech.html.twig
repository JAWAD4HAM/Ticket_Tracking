{% extends 'base.html.twig' %}

{% block title %}Tech Dashboard{% endblock %}

{% block body %}
<div class="dashboard-grid">
    <!-- Unassigned Tickets Queue -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Unassigned / New</h3>
        </div>
        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Subject</th>
                        <th>Priority</th>
                        <th>SLA</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in unassigned_tickets %}
                        <tr>
                            <td>#{{ ticket.id }}</td>
                            <td>{{ ticket.title }}</td>
                            <td>{{ ticket.priority.label|default('-') }}</td>
                            <td>
                                {% if ticket.slaDueAt %}
                                    {% set overdue = ticket.slaDueAt < date() %}
                                    <span class="status-badge {{ overdue ? 'status-closed' : 'status-open' }}">
                                        {{ ticket.slaDueAt|date('M d, H:i') }}
                                    </span>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ ticket.createdAt|date('M d, H:i') }}</td>
                            <td>
                                <form method="post" action="{{ path('app_ticket_pickup', {id: ticket.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('ticket_pickup_' ~ ticket.id) }}">
                                    <button type="submit" style="color: #3B82F6; background: none; border: none; padding: 0; cursor: pointer;">Pick Up</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6">No pending tickets.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Assigned to Me -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Assigned to Me</h3>
        </div>
        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Subject</th>
                        <th>SLA</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in assigned_tickets %}
                        <tr>
                            <td>#{{ ticket.id }}</td>
                            <td>{{ ticket.title }}</td>
                            <td>
                                {% if ticket.slaDueAt %}
                                    {% set overdue = ticket.slaDueAt < date() %}
                                    <span class="status-badge {{ overdue ? 'status-closed' : 'status-open' }}">
                                        {{ ticket.slaDueAt|date('M d, H:i') }}
                                    </span>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                {% set statusLabel = ticket.status.label|default('Unknown') %}
                                <span class="status-badge {{ statusLabel in ['Ouvert', 'En cours'] ? 'status-open' : 'status-closed' }}">
                                    {{ statusLabel }}
                                </span>
                            </td>
                            <td><a href="{{ path('app_ticket_show', {id: ticket.id}) }}" style="color: #3B82F6;">Manage</a></td>
                        </tr>
                    {% else %}
                        <tr><td colspan="5">No tickets assigned to you.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
