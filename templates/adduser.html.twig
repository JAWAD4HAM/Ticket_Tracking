{% extends 'base.html.twig' %}

{% block title %}{{ 'Create User'|trans }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">{{ 'Create New User'|trans }}</h3>
            <p class="card-subtitle">{{ 'Register a new user in the system.'|trans }}</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'form-stack'}}) }}
            
            <div class="form-group">
                {{ form_label(form.name, 'Full Name'|trans, {'label_attr': {'class': 'label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'input', 'placeholder': 'John Doe'|trans}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email, 'Email Address'|trans, {'label_attr': {'class': 'label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'input', 'placeholder': 'email@genesys.com'|trans}}) }}
                {{ form_errors(form.email) }}
            </div>

            {% if form.dbRole is defined %}
            <div class="form-group">
                {{ form_label(form.dbRole, 'Role'|trans, {'label_attr': {'class': 'label'}}) }}
                {{ form_widget(form.dbRole, {'attr': {'class': 'select'}}) }}
                {{ form_errors(form.dbRole) }}
            </div>
            {% endif %}

            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.password.first, 'Password'|trans, {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.password.first, {'attr': {'class': 'input', 'placeholder': '••••••••'}}) }}
                    {{ form_errors(form.password.first) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password.second, 'Repeat Password'|trans, {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.password.second, {'attr': {'class': 'input', 'placeholder': '••••••••'}}) }}
                    {{ form_errors(form.password.second) }}
                </div>
            </div>

            <div class="btn-group">
                <button type="reset" class="btn btn-reset">{{ 'Reset'|trans }}</button>
                <button type="submit" class="btn btn-submit">{{ 'Register User'|trans }}</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
