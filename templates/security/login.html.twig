<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-theme="{{ app.user ? app.user.theme : 'system' }}">
<head>
    <meta charset="UTF-8">
    <title>{{ 'Genesys Helpdesk'|trans }} | {{ 'Login'|trans }}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}?v={{ app.request.server.get('REQUEST_TIME') }}" data-turbo-track="reload">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: var(--bg-color);
        }
        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 2.5rem;
            background: var(--card-bg);
            border-radius: 1.5rem;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            border: 1px solid var(--border-color);
        }
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .login-brand {
            font-size: 1.75rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }
        .login-subtitle {
            color: var(--text-muted);
            font-size: 0.875rem;
        }
        .form-footer {
            margin-top: 1.5rem;
            text-align: center;
            font-size: 0.875rem;
            color: var(--text-muted);
        }
        .form-footer a {
            color: var(--accent-color);
            text-decoration: none;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-header">
            <div class="login-brand">{{ 'Genesys Helpdesk'|trans }}</div>
            <p class="login-subtitle">{{ 'Sign in to your account'|trans }}</p>
        </div>

        <form method="post">
            {% if error %}
                <div class="alert-box alert-blue" role="alert" style="margin-bottom: 1.5rem; background-color: #FEF2F2; border-color: #FECACA; color: #991B1B;">
                    <i class="fa-solid fa-circle-exclamation" style="color: #EF4444;"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="form-stack">
                <div class="form-group">
                    <label for="username" class="label">{{ 'Email Address'|trans }}</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="input" autocomplete="email" required autofocus placeholder="{{ 'Enter your email'|trans }}">
                </div>
                
                <div class="form-group">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <label for="password" class="label">{{ 'Password'|trans }}</label>
                        <a href="{{ path('app_forgot_password') }}" style="font-size: 0.75rem; color: var(--accent-color); text-decoration: none; font-weight: 600;">{{ 'Forgot?'|trans }}</a>
                    </div>
                    <input type="password" name="_password" id="password" class="input" autocomplete="current-password" required placeholder="{{ 'Enter your password'|trans }}">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                        <input type="checkbox" name="_remember_me" style="width: 1rem; height: 1rem; cursor: pointer;">
                        <span style="font-size: 0.875rem; color: var(--text-muted);">{{ 'Remember me'|trans }}</span>
                    </label>
                </div>

                <button  type="submit" class="btn btn-submit">
                    {{ 'Sign In'|trans }}
                </button>
            </div>
        </form>

        <div class="form-footer">
            {{ "Don't have an account?"|trans }} <a href="{{ path('app_user_create') }}">{{ 'Sign up'|trans }}</a>
        </div>
    </div>
</body>
</html>
