{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Edit User</h3>
            <p class="card-subtitle">Update user details and role.</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'form-stack'}}) }}
            <div class="form-group">
                {{ form_label(form.name, 'Full Name', {'label_attr': {'class': 'label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'input'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'input'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.dbRole, 'Role', {'label_attr': {'class': 'label'}}) }}
                {{ form_widget(form.dbRole, {'attr': {'class': 'select'}}) }}
                {{ form_errors(form.dbRole) }}
            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.password.first, 'New Password', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.password.first, {'attr': {'class': 'input', 'placeholder': 'Leave blank to keep current'}}) }}
                    {{ form_errors(form.password.first) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password.second, 'Repeat Password', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.password.second, {'attr': {'class': 'input', 'placeholder': 'Leave blank to keep current'}}) }}
                    {{ form_errors(form.password.second) }}
                </div>
            </div>

            <div class="btn-group">
                <a href="{{ path('app_admin_users') }}" class="btn btn-secondary" style="text-decoration: none;">Cancel</a>
                <button type="submit" class="btn btn-submit">Save Changes</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
