{% extends 'base.html.twig' %}

{% block title %}{{ 'System Configuration'|trans }}{% endblock %}

{% block body %}
{% if view is null or view == 'categories' %}
<div class="card" style="margin-bottom: 2rem;">
    <div class="card-header">
        <h3 class="card-title">{{ page_title|default('Categories')|trans }}</h3>
    </div>
    <div style="padding: 1.5rem;">
        {% if view == 'categories' %}
            {# Statistics View #}
             <div class="table-container">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>{{ 'Category'|trans }}</th>
                            <th>{{ 'Ticket Count'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in categories_data %}
                            <tr>
                                <td>{{ item.category.label }}</td>
                                <td>{{ item.count }}</td>
                            </tr>
                        {% else %}
                            <tr><td colspan="2">{{ 'No categories found.'|trans }}</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            {# Management View #}
            <form method="post" action="{{ path('app_admin_config') }}" class="form-stack" style="margin-bottom: 1rem;">
                <input type="hidden" name="_token" value="{{ csrf_token('admin_config') }}">
                <input type="hidden" name="action" value="add_category">
                <div class="form-row">
                    <div class="form-group" style="flex: 1;">
                        <label class="label">{{ 'New Category'|trans }}</label>
                        <input type="text" name="label" class="input" placeholder="{{ 'e.g. Hardware'|trans }}" required>
                    </div>
                    <div class="form-group" style="align-self: flex-end;">
                        <button type="submit" class="btn btn-primary">{{ 'Add'|trans }}</button>
                    </div>
                </div>
            </form>

            <div class="table-container">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>{{ 'Label'|trans }}</th>
                            <th>{{ 'Action'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {# In management mode, categories_data is just the list of entities #}
                        {% for category in categories_data %}
                            <tr>
                                <td>{{ category.label }}</td>
                                <td>
                                    <form method="post" action="{{ path('app_admin_category_delete', {id: category.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                                        <button class="btn btn-secondary" type="submit">{{ 'Delete'|trans }}</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="2">{{ 'No categories found.'|trans }}</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endif %}

{% if view is null or view == 'priorities' %}
<div class="card" style="margin-bottom: 2rem;">
    <div class="card-header">
        <h3 class="card-title">{{ 'Priorities'|trans }}</h3>
    </div>
    <div style="padding: 1.5rem;">
        <form method="post" action="{{ path('app_admin_config') }}" class="form-stack" style="margin-bottom: 1rem;">
            <input type="hidden" name="_token" value="{{ csrf_token('admin_config') }}">
            <input type="hidden" name="action" value="add_priority">
            <div class="form-row">
                <div class="form-group" style="flex: 2;">
                    <label class="label">{{ 'New Priority'|trans }}</label>
                    <input type="text" name="label" class="input" placeholder="{{ 'e.g. P2 - High'|trans }}" required>
                </div>
                <div class="form-group" style="flex: 1;">
                    <label class="label">{{ 'Level'|trans }}</label>
                    <input type="number" name="level" class="input" min="1" max="10" required>
                </div>
                <div class="form-group" style="align-self: flex-end;">
                    <button type="submit" class="btn btn-primary">{{ 'Add'|trans }}</button>
                </div>
            </div>
        </form>

        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>{{ 'Label'|trans }}</th>
                        <th>{{ 'Level'|trans }}</th>
                        <th>{{ 'Action'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for priority in priorities %}
                        <tr>
                            <td>{{ priority.label }}</td>
                            <td>{{ priority.level }}</td>
                            <td>
                                <form method="post" action="{{ path('app_admin_priority_delete', {id: priority.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_priority_' ~ priority.id) }}">
                                    <button class="btn btn-secondary" type="submit">{{ 'Delete'|trans }}</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="3">{{ 'No priorities found.'|trans }}</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endif %}

{% if view is null or view == 'statuses' %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{ 'Statuses'|trans }}</h3>
    </div>
    <div style="padding: 1.5rem;">
        <form method="post" action="{{ path('app_admin_config') }}" class="form-stack" style="margin-bottom: 1rem;">
            <input type="hidden" name="_token" value="{{ csrf_token('admin_config') }}">
            <input type="hidden" name="action" value="add_status">
            <div class="form-row">
                <div class="form-group" style="flex: 1;">
                    <label class="label">{{ 'New Status'|trans }}</label>
                    <input type="text" name="label" class="input" placeholder="{{ 'e.g. En cours'|trans }}" required>
                </div>
                <div class="form-group" style="align-self: flex-end;">
                    <button type="submit" class="btn btn-primary">{{ 'Add'|trans }}</button>
                </div>
            </div>
        </form>

        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>{{ 'Label'|trans }}</th>
                        <th>{{ 'Action'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for status in statuses %}
                        <tr>
                            <td>{{ status.label }}</td>
                            <td>
                                <form method="post" action="{{ path('app_admin_status_delete', {id: status.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_status_' ~ status.id) }}">
                                    <button class="btn btn-secondary" type="submit">{{ 'Delete'|trans }}</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="2">{{ 'No statuses found.'|trans }}</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
