{% extends 'base.html.twig' %}

{% block title %}{{ 'Manage Users'|trans }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header" style="margin-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
            <h3 class="card-title">{{ page_title|default('User Management')|trans }}</h3>
            {% if not simple_mode %}
            <a href="{{ path('app_user_create') }}" style="font-size: 0.875rem; color: #3B82F6; text-decoration: none; font-weight: 600;">{{ '+ New User'|trans }}</a>
            {% endif %}
        </div>
        
        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>{{ 'ID'|trans }}</th>
                        <th>{{ 'Name'|trans }}</th>
                        <th>{{ 'Email'|trans }}</th>
                        <th>{{ 'Role'|trans }}</th>
                        <th>{{ 'Created At'|trans }}</th>
                        <th>{{ 'Action'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>#{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <span style="
                                    background: {% if 'ROLE_ADMIN' in user.roles %}#FEE2E2; color: #DC2626;{% elseif 'ROLE_MANAGER' in user.roles %}#FEF3C7; color: #D97706;{% elseif 'ROLE_TECH' in user.roles %}#DBEAFE; color: #2563EB;{% else %}#F1F5F9; color: #475569;{% endif %}
                                    padding: 0.25rem 0.5rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600;">
                                    {{ user.dbRole|default('user')|upper }}
                                </span>
                            </td>
                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '-' }}</td>
                            <td>
                                <a href="{{ path('app_admin_user_edit', {id: user.id}) }}" style="color: #64748B;">{{ 'Edit'|trans }}</a>
                                {% if app.user and app.user.id != user.id %}
                                    <form method="post" action="{{ path('app_admin_user_delete', {id: user.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('user_delete_' ~ user.id) }}">
                                        <button type="submit" style="margin-left: 0.5rem; color: #DC2626; background: none; border: none; padding: 0; cursor: pointer;">{{ 'Delete'|trans }}</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">{{ 'No users found.'|trans }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
