<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Genesys Helpdesk | Create Ticket</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
    <div class="app-container">
      
      {{ include('partials/_sidebar.html.twig') }}

        <main class="main-content">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create New Ticket</h3>
                    <p class="card-subtitle">Fill in the details below to raise a new support ticket.</p>
                </div>

                {% if error is defined %}
                    <div class="alert-box alert-emerald">
                        <div>
                            <span style="font-weight: bold; display: block; margin-bottom: 0.25rem;">Error</span>
                            {{ error }}
                        </div>
                    </div>
                {% endif %}

                <form action="/submit-ticket" method="POST" class="form-stack" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="label">Ticket Title</label>
                        <input type="text" name="titre" required placeholder="Brief summary of the issue" class="input">
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="label">Category</label>
                            <select name="category_id" class="select" required>
                                <option value="">Select a category</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}">{{ category.label }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="label">Priority</label>
                            <select name="priority_id" class="select" required>
                                <option value="">Select a priority</option>
                                {% for priority in priorities %}
                                    <option value="{{ priority.id }}">{{ priority.label }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="label">Description</label>
                        <textarea name="Description" rows="4" required placeholder="Detailed description of the problem..." class="textarea"></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="label">Requester</label>
                            <select name="creator_id" class="select" required>
                                <option value="">Select a requester</option>
                                {% for user in users %}
                                    <option value="{{ user.id }}">{{ user.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="label">Date Creation</label>
                            <input type="date" name="date_creation" class="input">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="label">Attachment</label>
                        <div class="upload-area">
                            <div class="upload-content">
                                <svg class="upload-icon" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="upload-text">
                                    <span class="upload-link">Click to upload document</span>
                                </div>
                                <p class="upload-hint">PDF, PNG, JPG or LOG up to 10MB</p>
                            </div>
                            <input type="file" name="chemin_fichier" class="file-input">
                        </div>
                    </div>

                    <div class="btn-group">
                        <button type="reset" class="btn btn-reset">Reset</button>
                        <button type="submit" class="btn btn-submit">Create Ticket</button>
                    </div>
                </form>
            </div>
        </main>
    </div>
    <script>document.querySelector('input[name="date_creation"]').valueAsDate = new Date();</script>
</body>
</html>
